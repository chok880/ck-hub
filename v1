-- ‡πÇ‡∏´‡∏•‡∏î Ash-Libs GUI
local GUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/BloodLetters/Ash-Libs/refs/heads/main/source.lua"))()

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡∏´‡∏•‡∏±‡∏Å
GUI:CreateMain({
    Name = "Chok Hub",
    title = "Chok Hub v.1",
    ToggleUI = "K",
    WindowIcon = "shield",
    Theme = {
        Background = Color3.fromRGB(20, 20, 30),
        Secondary = Color3.fromRGB(35, 35, 45),
        Accent = Color3.fromRGB(0, 170, 255),
        Text = Color3.fromRGB(255, 255, 255),
        TextSecondary = Color3.fromRGB(200, 200, 200),
        Border = Color3.fromRGB(60, 60, 70),
        NavBackground = Color3.fromRGB(25, 25, 35)
    }
})

-- ‡πÅ‡∏ó‡πá‡∏ö‡∏´‡∏•‡∏±‡∏Å
local main = GUI:CreateTab("Main", "home")

-- ‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏•‡∏±‡∏Å‡∏Ç‡∏≠‡∏á‡∏£‡∏∞‡∏ö‡∏ö
GUI:CreateSection({
    parent = main,
    text = "‚öôÔ∏è ‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏±‡∏í‡∏ô‡∏≤‡πÄ‡∏°‡∏∑‡∏≠‡∏á & ‡∏Å‡∏≠‡∏á‡∏ó‡∏±‡∏û"
})

-- RemoteEvent
local remote = game:GetService("ReplicatedStorage").RemoteEvent_1
local AntiAircraftCount = 12000

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏û‡∏±‡∏í‡∏ô‡∏≤‡πÄ‡∏°‡∏∑‡∏≠‡∏á
local function DevelopAll(mode)
	for _, region in pairs(workspace.Regions:GetChildren()) do
		pcall(function()
			remote:FireServer("DevelopTile", region, mode)
		end)
	end
	GUI:CreateNotify({ title = "‚úÖ ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!", description = "‡∏û‡∏±‡∏í‡∏ô‡∏≤‡πÄ‡∏°‡∏∑‡∏≠‡∏á‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡πÅ‡∏ö‡∏ö " .. mode })
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Å‡∏≠‡∏á‡∏ó‡∏±‡∏û AntiAircraft
local function CreateAntiAircraftAll()
	for _, region in pairs(workspace.Regions:GetChildren()) do
		pcall(function()
			remote:FireServer("CreateArmyOnTile", region, "AntiAircraft", AntiAircraftCount)
		end)
	end
	GUI:CreateNotify({
		title = "üöÄ ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Å‡∏≠‡∏á‡∏ó‡∏±‡∏û‡πÅ‡∏•‡πâ‡∏ß!",
		description = "AntiAircraft ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î: " .. tostring(AntiAircraftCount)
	})
end

-- ‡∏õ‡∏∏‡πà‡∏° Develop Tier
GUI:CreateButton({
    parent = main,
    text = "‚ö° Develop All (Tier)",
    callback = function()
        DevelopAll("Tier")
    end
})

-- ‡∏õ‡∏∏‡πà‡∏° Develop Def
GUI:CreateButton({
    parent = main,
    text = "üõ°Ô∏è Develop All (Def)",
    callback = function()
        DevelopAll("Def")
    end
})

-- Dropdown ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏à‡∏≥‡∏ô‡∏ß‡∏ô AntiAircraft
GUI:CreateDropdown({
    parent = main,
    text = "üõ´ ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏à‡∏≥‡∏ô‡∏ß‡∏ô AntiAircraft",
    options = {"1000", "2000", "5000", "10000", "30000", "50000"},
    callback = function(selected)
        AntiAircraftCount = tonumber(selected)
        GUI:CreateNotify({
            title = "üîß ‡∏õ‡∏£‡∏±‡∏ö‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÅ‡∏•‡πâ‡∏ß!",
            description = "‡∏à‡∏≥‡∏ô‡∏ß‡∏ô AntiAircraft = " .. selected
        })
    end
})

-- ‡∏õ‡∏∏‡πà‡∏°‡∏™‡∏£‡πâ‡∏≤‡∏á AntiAircraft
GUI:CreateButton({
    parent = main,
    text = "üöÄ Create AntiAircraft All",
    callback = function()
        CreateAntiAircraftAll()
    end
})

-- üîë ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î UI ‡∏°‡∏∑‡∏≠‡∏ñ‡∏∑‡∏≠ & PC
GUI:CreateNotify({
    title = "üì± ‡∏û‡∏£‡πâ‡∏≠‡∏°‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô!",
    description = "‡∏Å‡∏î K ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î UI ‡πÑ‡∏î‡πâ‡∏ó‡∏±‡πâ‡∏á‡∏ö‡∏ô‡∏°‡∏∑‡∏≠‡∏ñ‡∏∑‡∏≠‡πÅ‡∏•‡∏∞ PC"
})
